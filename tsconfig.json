{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./scripts",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./scripts/*"]
    }
  },
  "include": ["scripts/**/*"],
  "exclude": ["node_modules", "dist"]
}
